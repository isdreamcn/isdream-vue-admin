{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./typings/*"],
      "~/*": ["./*"]
    },
    "types": [
      "element-plus/global",
      "unplugin-vue-define-options/macros-global"
    ]
  },
  "include": [
    "typings/**/*.ts",
    "typings/**/*.d.ts",

    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",

    "mock/**/*.ts",
    "build/**/*.ts",
    "vite.config.ts",
    "components.d.ts",
    "auto-imports.d.ts",
    "typings/env.d.ts"
  ],
  // "references": [{ "path": "./tsconfig.node.json" }]
}
